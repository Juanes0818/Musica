<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@android:color/background_light">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8"
        android:gravity="center"
        android:layout_marginBottom="34.6dp">
        <Spinner
            android:layout_width="349.1dp"
            android:layout_height="44.9dp"
            android:id="@+id/spinner1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:gravity="center"
        android:layout_marginBottom="35.7dp">
        <ImageView
            android:src="@drawable/imga2"
            android:layout_width="260.0dp"
            android:layout_height="260.0dp"
            android:id="@+id/imageView1"
            android:background="@android:color/darker_gray" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:gravity="center"
        android:layout_marginBottom="29.7dp">
        <TextView
            android:text="Musica"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:gravity="center"
        android:layout_marginBottom="49.1dp">
        <TextView
            android:text="Autor"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView2" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout5"
        android:gravity="center"
        android:layout_marginBottom="45.1dp">
        <Button
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:id="@+id/buttonAtras"
            android:layout_marginRight="75.0dp"
            app:backgroundTint="@android:color/transparent"
            android:background="@drawable/atrasn" />
        <Button
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:id="@+id/buttonPlay"
            app:backgroundTint="@android:color/transparent"
            android:background="@drawable/pausan" />
        <Button
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:id="@+id/buttonSig"
            android:layout_marginLeft="75.0dp"
            app:backgroundTint="@android:color/transparent"
            android:background="@drawable/sign" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout4"
        android:gravity="center"
        android:layout_marginBottom="0.0dp">
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="352.0dp"
            android:layout_height="match_parent"
            android:id="@+id/progressBar1" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="15.4dp"
        android:id="@+id/linearLayout7"
        android:gravity="center"
        android:layout_marginBottom="22.3dp">
        <TextView
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView3"
            android:layout_marginRight="155.0dp" />
        <TextView
            android:text="000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textView4"
            android:layout_marginLeft="155.0dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:gravity="center">
        <Button
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:id="@+id/buttonRandom"
            android:layout_marginRight="100.0dp"
            app:backgroundTint="@android:color/transparent"
            android:background="@drawable/shuffler" />
        <Button
            android:layout_width="50.0dp"
            android:layout_height="50.0dp"
            android:id="@+id/buttonRep"
            android:layout_marginLeft="100.0dp"
            app:backgroundTint="@android:color/transparent"
            android:background="@drawable/repiter" />
    </LinearLayout>

</LinearLayout>
